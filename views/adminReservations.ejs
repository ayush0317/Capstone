<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Reservation Calendar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />

 <!-- ðŸ’… Custom Styling -->
 <style>
  body {
    background: url('/Images/666.png') no-repeat center center fixed;
    background-size: cover;
    color: #fff;
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    padding: 0;
    backdrop-filter: blur(6px);
  }

  h1 {
    text-align: center;
    color: #ffffff;
    font-weight: bold;
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    margin-bottom: 20px;
  }

  #calendar {
    background-color: rgba(0, 0, 0, 0.75);
    padding: 25px;
    border-radius: 16px;
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.1);
  }

  .fc-toolbar-title {
    font-size: 1.8rem;
    color: #ffc107;
    text-shadow: 1px 1px 3px #000;
  }

  .fc-button {
    background-color: #343a40 !important;
    border: none !important;
    color: #fff !important;
  }

  .fc-button:hover {
    background-color: #ffc107 !important;
    color: #000 !important;
  }

  .fc-event {
    background-color: #ffc107 !important;
    color: #000 !important;
    border: none;
    font-weight: 500;
    padding: 2px 5px;
    border-radius: 5px;
  }

  .container {
    padding-top: 70px;
    max-width: 1000px;
  }

  @media screen and (max-width: 768px) {
    .container {
      padding: 20px;
    }
  }
</style>
</head>
<body>
  <div class="container py-5">
    <h1 class="text-center mb-4">ðŸ“… Table Reservations Calendar</h1>

    <!-- ðŸ“¦ Embedded Reservation Events -->
    <script type="application/json" id="reservations-data">
      <%- JSON.stringify(reservations) %>
    </script>

    <div id="calendar"></div>
  </div>

<!-- âœ… FullCalendar & Bootstrap Scripts -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const calendarEl = document.getElementById("calendar");

    const reservationEvents = JSON.parse(document.getElementById("reservations-data").textContent);

    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: "dayGridMonth",
      events: reservationEvents,
      eventColor: '#ffc107',
      eventClick: function(info) {
        const { guests, email, time } = info.event.extendedProps;
        alert(`Reservation Info:\nGuests: ${guests}\nTime: ${time}\nEmail: ${email}`);
      },
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek'
      }
    });

    calendar.render();
  });
</script>

</body>
</html>


