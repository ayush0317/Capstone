<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>üìä Admin Reports</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/adminReports.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-uppercase" href="/">Restaurant Name</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/menu">Menu</a></li>
                <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
                <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>

                <% if (user) { %>
                    <li class="nav-item">
                        <span class="nav-link text-white">üë§ <%= user.firstName %></span>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="btn btn-danger" href="/logout">Logout</a>
                    </li>
                <% } else { %>
                    <li class="nav-item ms-3">
                        <a class="btn btn-outline-light" href="/login">Sign In</a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-success" href="/signup">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>


  <!-- ‚úÖ Dashboard Container -->
  <div class="container dashboard-container my-5 pt-5">
    <h1 class="text-center mb-4">üìä Admin Dashboard</h1>

    <!-- ‚úÖ Summary Cards -->
    <div class="row g-4 text-center">
      <div class="col-md-3">
        <div class="card shadow p-3">
          <h5>Total Orders</h5>
          <h2 class="text-success"><%= totalOrders %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card shadow p-3">
          <h5>Total Revenue</h5>
          <h2 class="text-warning">‚Çπ<%= totalRevenue.toFixed(2) %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card shadow p-3">
          <h5>Table Reservations</h5>
          <h2 class="text-info"><%= reservationCount %></h2>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card shadow p-3">
          <h5>Customers</h5>
          <h2 class="text-danger"><%= uniqueCustomers %></h2>
        </div>
      </div>
    </div>

    <!-- ‚úÖ Top 5 Dishes -->
    <div class="mt-5">
      <h3 class="text-secondary">üçΩÔ∏è Top 5 Ordered Dishes</h3>
      <ul class="list-group mt-3">
        <% topItems.forEach(item => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= item.name %>
            <span class="badge bg-primary rounded-pill">x <%= item.count %></span>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- ‚úÖ Order History Table -->
    <div class="mt-5">
      <h3 class="text-secondary">üßæ Order History</h3>
      <div class="table-responsive mt-2">
        <table class="table table-hover table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Customer</th>
              <th>Email</th>
              <th>Address</th>
              <th>Payment</th>
              <th>Amount</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% orderHistory.forEach(order => { %>
              <tr>
                <td><%= order.name %></td>
                <td><%= order.email %></td>
                <td><%= order.address %></td>
                <td><%= order.paymentMethod %></td>
                <td>‚Çπ<%= order.totalAmount %></td>
                <td><%= new Date(order.createdAt).toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- ‚úÖ Export + Home Buttons -->
    <div class="text-center my-4">
      <a href="/reports/export/csv" class="btn btn-outline-primary me-2">‚¨áÔ∏è Export CSV</a>
      <a href="/" class="btn btn-outline-light">üè† Back to Home</a>
    </div>

  </div>
</body>
</html>
