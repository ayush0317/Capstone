<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Past Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/adminReports.css">
  <style>
    .order-tracker {
      background: rgba(0, 0, 0, 0.7);
      padding: 20px 25px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(255,255,255,0.1);
    }

    .tracker-container {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    .tracker-step {
      flex: 1;
      text-align: center;
      position: relative;
    }

    .tracker-step .circle {
      width: 35px;
      height: 35px;
      margin: 0 auto;
      border-radius: 50%;
      background-color: gray;
      color: white;
      font-weight: bold;
      line-height: 35px;
      margin-bottom: 8px;
      transition: 0.3s ease;
    }

    .tracker-step p {
      font-size: 0.9rem;
      color: #eee;
    }

    .tracker-step.completed .circle {
      background-color: #28a745;
    }

    .tracker-step.active .circle {
      background-color: #ffc107;
    }

    .tracker-step.upcoming .circle {
      background-color: #6c757d;
    }

    .tracker-step::after {
      content: '';
      position: absolute;
      top: 17px;
      right: -50%;
      width: 100%;
      height: 4px;
      background: #ccc;
      z-index: -1;
    }

    .tracker-step:last-child::after {
      display: none;
    }
  </style>
</head>
<body>

  <!-- üîπ Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand fw-bold text-uppercase" href="/">RESTAURANT NAME</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/menu">Menu</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="btn btn-danger btn-sm" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- üîπ Past Orders Section -->
  <div class="container mt-5 pt-5">
    <h3 class="text-white mb-4">üßæ Your Past Orders</h3>
    <% if (orders.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover text-white">
          <thead class="table-dark">
            <tr>
              <th>Items</th>
              <th>Quantity</th>
              <th>Total Amount</th>
              <th>Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach((order, i) => { %>
              <tr>
                <td>
                  <% order.items.forEach(item => { %>
                    <div><%= item.name %></div>
                  <% }) %>
                </td>
                <td>
                  <% order.items.forEach(item => { %>
                    <div>x <%= item.quantity %></div>
                  <% }) %>
                </td>
                <td>‚Çπ<%= order.totalAmount %></td>
                <td><%= new Date(order.createdAt).toLocaleString() %></td>
                <td>
                    <% if (i === 0) { 
                      const orderTime = new Date(order.createdAt);
                      const now = new Date();
                      const hoursElapsed = (now - orderTime) / (1000 * 60 * 60);
                  
                      if (hoursElapsed >= 5) { %>
                        <span class="badge bg-success">‚úÖ Order Picked</span>
                    <% } else if (order.totalAmount <= 1000) { %>
                        <span class="badge bg-info text-dark">üì¶ Ready to Pickup</span>
                    <% } else { %>
                        <span class="badge bg-warning text-dark">üïí Preparing</span>
                    <% } %>
                    <% } else { %>
                        <span class="badge bg-info text-dark">‚úÖ Order Picked</span>

                    <% } %>
                  </td>
                  
              </tr>

              <% if (i === 0) { %>
                <tr>
                    <td colspan="5">
                        <div class="order-tracker mt-4 mb-3">
                          <h5 class="text-light mb-3">üçΩÔ∏è Takeout Order Progress</h5>
                          <% 
                            const orderTime = new Date(order.createdAt);
                            const now = new Date();
                            const hoursElapsed = (now - orderTime) / (1000 * 60 * 60);
                            let currentStep = 1;
                      
                            if (hoursElapsed >= 5) {
                              currentStep = 5; // Picked
                            } else if (order.totalAmount <= 1000) {
                              if (hoursElapsed < 1) currentStep = 2;
                              else if (hoursElapsed < 2) currentStep = 3;
                              else currentStep = 4;
                            } else {
                              if (hoursElapsed < 1.5) currentStep = 2;
                              else if (hoursElapsed < 2.5) currentStep = 3;
                              else currentStep = 4;
                            }
                          %>
                      
                          <div class="tracker-container">
                            <div class="tracker-step completed">
                              <div class="circle">1</div>
                              <p>Order Received</p>
                            </div>
                      
                            <div class="tracker-step <%= currentStep >= 2 ? 'completed' : 'upcoming' %>">
                              <div class="circle">2</div>
                              <p>Preparing</p>
                            </div>
                      
                            <div class="tracker-step <%= currentStep >= 3 ? 'completed' : 'upcoming' %>">
                              <div class="circle">3</div>
                              <p>Packaging</p>
                            </div>
                      
                            <div class="tracker-step <%= currentStep >= 4 ? 'completed' : 'upcoming' %>">
                              <div class="circle">4</div>
                              <p>Ready to Pickup</p>
                            </div>
                      
                            <div class="tracker-step <%= currentStep === 5 ? 'completed' : 'upcoming' %>">
                              <div class="circle">5</div>
                              <p>Order Picked</p>
                            </div>
                          </div>
                        </div>
                      </td>
                      
                </tr>
              <% } %>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-muted">No previous orders found.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
